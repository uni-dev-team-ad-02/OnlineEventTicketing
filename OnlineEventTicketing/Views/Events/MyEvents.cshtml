@model IEnumerable<OnlineEventTicketing.Models.ViewModels.EventDisplayViewModel>
@{
    ViewData["Title"] = "My Events";
}

<div class="container-fluid fade-in">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="dashboard-title mb-1">My Events</h1>
                    <p class="dashboard-subtitle mb-0">Create and manage your events</p>
                </div>
                <a asp-action="Create" class="btn btn-primary-custom btn-lg">
                    <i class="bi bi-plus-circle-fill me-2"></i>Create New Event
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card events-table-card">
                    <div class="card-body">
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-week text-muted" style="font-size: 4rem;"></i>
                            <h4 class="text-muted mt-3">No events created yet</h4>
                            <p class="text-muted">Create your first event to start selling tickets and managing attendees.</p>
                            <a asp-action="Create" class="btn btn-primary-custom btn-lg">
                                <i class="bi bi-plus-circle-fill me-2"></i>Create Your First Event
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Events Summary -->
        <div class="row mb-4 slide-up">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card">
                    <div class="card-body text-center">
                        <div class="stat-icon stat-icon-primary mb-3">
                            <i class="bi bi-calendar-week-fill"></i>
                        </div>
                        <h3 class="stat-number text-primary-custom">@Model.Count()</h3>
                        <p class="stat-label mb-0">Total Events</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card">
                    <div class="card-body text-center">
                        <div class="stat-icon stat-icon-success mb-3">
                            <i class="bi bi-calendar-check-fill"></i>
                        </div>
                        <h3 class="stat-number text-success-custom">@Model.Count(e => e.IsUpcoming)</h3>
                        <p class="stat-label mb-0">Upcoming</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card">
                    <div class="card-body text-center">
                        <div class="stat-icon stat-icon-info mb-3">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <h3 class="stat-number text-info-custom">@Model.Count(e => e.IsActive)</h3>
                        <p class="stat-label mb-0">Active</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card">
                    <div class="card-body text-center">
                        <div class="stat-icon stat-icon-warning mb-3">
                            <i class="bi bi-ticket-perforated-fill"></i>
                        </div>
                        <h3 class="stat-number text-warning-custom">@Model.Sum(e => e.Capacity - e.AvailableTickets)</h3>
                        <p class="stat-label mb-0">Tickets Sold</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Events List -->
        <div class="row">
            <div class="col-12">
                <div class="card events-table-card">
                    <div class="card-header border-0 bg-transparent">
                        <h5 class="section-title mb-0">All Events</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-professional">
                                    <tr>
                                        <th>Event</th>
                                        <th>Date</th>
                                        <th>Location</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Tickets Available</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                            @foreach (var eventItem in Model)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@eventItem.Title</strong>
                                            @if (!string.IsNullOrEmpty(eventItem.Description) && eventItem.Description.Length > 50)
                                            {
                                                <br><small class="text-muted">@(eventItem.Description.Substring(0, 50))...</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <small>@eventItem.FormattedDate</small>
                                    </td>
                                    <td>@eventItem.Location</td>
                                    <td>
                                        <span class="badge bg-secondary">@eventItem.Category</span>
                                    </td>
                                    <td>@eventItem.FormattedPrice</td>
                                    <td>
                                        <span class="badge @(eventItem.HasAvailableTickets ? "bg-success" : "bg-danger")">
                                            @eventItem.AvailableTickets / @eventItem.Capacity
                                        </span>
                                    </td>
                                    <td>
                                        @if (eventItem.IsUpcoming)
                                        {
                                            <span class="badge bg-info">Upcoming</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Past</span>
                                        }
                                        
                                        @if (eventItem.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@eventItem.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>