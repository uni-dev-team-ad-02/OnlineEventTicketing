@model OnlineEventTicketing.Models.ViewModels.EventSearchViewModel
@{
    ViewData["Title"] = "Search Events";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="dashboard-title mb-1"><i class="bi bi-search me-2"></i>Search Events</h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card form-card">
                <div class="card-body">
                    <form asp-action="Search" method="get">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label asp-for="SearchTerm" class="form-label"></label>
                                <input asp-for="SearchTerm" class="form-control" placeholder="Search events...">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">All Categories</option>
                                    @foreach (var category in Model.AvailableCategories)
                                    {
                                        <option value="@category" selected="@(Model.Category == category)">@category</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Location" class="form-label"></label>
                                <input asp-for="Location" class="form-control" placeholder="City or venue">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Date" class="form-label"></label>
                                <input asp-for="Date" class="form-control" type="date">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary-custom">
                                    <i class="bi bi-search me-2"></i>Search
                                </button>
                                <a asp-action="Search" class="btn btn-outline-secondary ms-2">
                                    <i class="bi bi-arrow-counterclockwise me-2"></i>Clear
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Results.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <h4 class="section-title mb-3">Search Results (@Model.Results.Count() events found)</h4>
            </div>
        </div>
        <div class="row">
            @foreach (var eventItem in Model.Results)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card analytics-card h-100">
                        @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                        {
                            <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-calendar-event text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@eventItem.Title</h5>
                            <p class="card-text flex-grow-1">
                                @if (eventItem.Description.Length > 100)
                                {
                                    @Html.Raw(eventItem.Description.Substring(0, 100) + "...")
                                }
                                else
                                {
                                    @eventItem.Description
                                }
                            </p>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-2"></i>@eventItem.FormattedDate
                                </small><br>
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt me-2"></i>@eventItem.Location
                                </small><br>
                                <small class="text-muted">
                                    <i class="bi bi-tag me-2"></i>@eventItem.Category
                                </small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="h5 text-primary mb-0">@eventItem.FormattedPrice</span>
                                <span class="badge @(eventItem.HasAvailableTickets ? "bg-success" : "bg-danger")">
                                    @eventItem.AvailableTickets tickets left
                                </span>
                            </div>
                            <div class="mt-auto">
                                <a asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="bi bi-eye me-2"></i>View Details
                                </a>
                                @if (eventItem.HasAvailableTickets && User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="Tickets" asp-action="Purchase" asp-route-id="@eventItem.Id" class="btn btn-success-custom btn-sm">
                                        <i class="bi bi-ticket me-2"></i>Buy Tickets
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.Category) || !string.IsNullOrEmpty(Model.Location) || Model.Date.HasValue)
    {
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="alert alert-info">
                    <h4>No Events Found</h4>
                    <p>No events match your search criteria. Try adjusting your filters.</p>
                </div>
            </div>
        </div>
    }
</div>