@model OnlineEventTicketing.Models.ViewModels.EventDisplayViewModel
@{
    ViewData["Title"] = "Delete Event";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3><i class="bi bi-exclamation-triangle"></i> Delete Event</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5>Are you sure you want to delete this event?</h5>
                        <p>This action cannot be undone. All associated tickets and data will be permanently removed.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
                            }
                            else
                            {
                                <div class="bg-light border rounded d-flex align-items-center justify-content-center" style="height: 150px;">
                                    <i class="bi bi-calendar-event text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.Title</h4>
                            <p class="text-muted">@Model.Description</p>
                            
                            <dl class="row">
                                <dt class="col-sm-4">Date:</dt>
                                <dd class="col-sm-8">@Model.FormattedDate</dd>
                                
                                <dt class="col-sm-4">Location:</dt>
                                <dd class="col-sm-8">@Model.Location</dd>
                                
                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">@Model.Category</dd>
                                
                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8">@Model.FormattedPrice</dd>
                                
                                <dt class="col-sm-4">Capacity:</dt>
                                <dd class="col-sm-8">@Model.Capacity people</dd>
                                
                                <dt class="col-sm-4">Available:</dt>
                                <dd class="col-sm-8">@Model.AvailableTickets tickets</dd>
                            </dl>
                        </div>
                    </div>
                    
                    @if (Model.Capacity - Model.AvailableTickets > 0)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Warning:</strong> This event has @(Model.Capacity - Model.AvailableTickets) sold tickets. 
                            Deleting this event will affect existing customers.
                        </div>
                    }
                    
                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="MyEvents" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Event Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>