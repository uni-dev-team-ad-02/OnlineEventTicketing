@model IEnumerable<OnlineEventTicketing.Models.ViewModels.EventDisplayViewModel>
@{
    ViewData["Title"] = "Upcoming Events";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="dashboard-title mb-1">@ViewData["Title"]</h2>
                <div>
                    <a asp-action="Search" class="btn btn-outline-primary me-2">
                        <i class="bi bi-search me-2"></i>Search Events
                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Create" class="btn btn-primary-custom">
                            <i class="bi bi-plus-circle me-2"></i>Create Event
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="alert alert-info">
                    <h4>No Upcoming Events</h4>
                    <p>There are currently no upcoming events available.</p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Create" class="btn btn-primary-custom">Create the First Event</a>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var eventItem in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card analytics-card h-100">
                        @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                        {
                            <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-calendar-event text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@eventItem.Title</h5>
                            <p class="card-text flex-grow-1">
                                @if (eventItem.Description.Length > 100)
                                {
                                    @Html.Raw(eventItem.Description.Substring(0, 100) + "...")
                                }
                                else
                                {
                                    @eventItem.Description
                                }
                            </p>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-2"></i>@eventItem.FormattedDate
                                </small><br>
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt me-2"></i>@eventItem.Location
                                </small><br>
                                <small class="text-muted">
                                    <i class="bi bi-tag me-2"></i>@eventItem.Category
                                </small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="h5 text-primary mb-0">@eventItem.FormattedPrice</span>
                                <span class="badge @(eventItem.HasAvailableTickets ? "bg-success" : "bg-danger")">
                                    @eventItem.AvailableTickets tickets left
                                </span>
                            </div>
                            <div class="mt-auto">
                                <a asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="bi bi-eye me-2"></i>View Details
                                </a>
                                @if (eventItem.HasAvailableTickets && User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="Tickets" asp-action="Purchase" asp-route-id="@eventItem.Id" class="btn btn-success-custom btn-sm">
                                        <i class="bi bi-ticket me-2"></i>Buy Tickets
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>