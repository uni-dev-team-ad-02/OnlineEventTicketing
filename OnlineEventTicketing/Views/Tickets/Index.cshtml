@model IEnumerable<OnlineEventTicketing.Models.ViewModels.TicketDisplayViewModel>
@{
    ViewData["Title"] = "My Tickets";
}

<div class="container fade-in">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="dashboard-title mb-1">
                        <i class="bi bi-ticket-perforated-fill me-2"></i>My Tickets
                    </h1>
                    <p class="dashboard-subtitle">View and manage all your purchased event tickets</p>
                </div>
                <a asp-area="" asp-controller="Events" asp-action="Index" class="btn btn-primary-custom btn-lg">
                    <i class="bi bi-compass-fill me-2"></i>Browse Events
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card form-card text-center">
                    <div class="card-body py-5">
                        <i class="bi bi-ticket-perforated text-muted mb-4" style="font-size: 4rem;"></i>
                        <h3 class="section-title">No Tickets Found</h3>
                        <p class="dashboard-subtitle mb-4">You haven't purchased any tickets yet. Start exploring events to find something exciting!</p>
                        <a asp-area="" asp-controller="Events" asp-action="Index" class="btn btn-primary-custom btn-lg">
                            <i class="bi bi-compass-fill me-2"></i>Explore Events
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row slide-up">
            @foreach (var ticket in Model)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card analytics-card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="section-title mb-0">
                                <i class="bi bi-ticket-detailed-fill me-2"></i>Ticket #@ticket.Id
                            </h6>
                            <span class="badge @ticket.StatusClass text-white">@ticket.StatusDisplayName</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-primary">@ticket.EventTitle</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-2">
                                        <small class="text-muted d-flex align-items-center">
                                            <i class="bi bi-calendar-event-fill me-2 text-primary"></i> @ticket.FormattedEventDate
                                        </small>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted d-flex align-items-center">
                                            <i class="bi bi-geo-alt-fill me-2 text-danger"></i> @ticket.EventLocation
                                        </small>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted d-flex align-items-center">
                                            <i class="bi bi-tag-fill me-2 text-info"></i> @ticket.EventCategory
                                        </small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-2">
                                        <small class="text-muted d-flex align-items-center">
                                            <i class="bi bi-currency-dollar me-2 text-success"></i> @ticket.FormattedPrice
                                        </small>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted d-flex align-items-center">
                                            <i class="bi bi-calendar-plus-fill me-2 text-secondary"></i> @ticket.FormattedPurchaseDate
                                        </small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(ticket.SeatNumber))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted d-flex align-items-center">
                                                <i class="bi bi-geo-fill me-2 text-warning"></i> Seat: @ticket.SeatNumber
                                            </small>
                                        </div>
                                    }
                                </div>
                            </div>
                            
                            <div class="mt-4 d-flex flex-wrap gap-2">
                                <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye-fill me-2"></i>Details
                                </a>
                                
                                @if (ticket.Status == OnlineEventTicketing.Data.Entity.TicketStatus.Active)
                                {
                                    <a asp-action="QrCode" asp-route-id="@ticket.Id" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-qr-code me-2"></i>QR Code
                                    </a>
                                    
                                    @if (ticket.CanBeCancelled)
                                    {
                                        <button type="button" class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#cancelModal-@ticket.Id">
                                            <i class="bi bi-x-circle-fill me-2"></i>Cancel
                                        </button>
                                    }
                                    
                                    @if (ticket.CanBeRefunded)
                                    {
                                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#refundModal-@ticket.Id">
                                            <i class="bi bi-arrow-left-circle-fill me-2"></i>Refund
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Cancel Modal -->
                @if (ticket.CanBeCancelled)
                {
                    <div class="modal fade" id="cancelModal-@ticket.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Cancel Ticket</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to cancel this ticket for <strong>@ticket.EventTitle</strong>?</p>
                                    <p class="text-warning">This action cannot be undone.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Keep Ticket</button>
                                    <form asp-action="Cancel" asp-route-id="@ticket.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-warning-custom">Cancel Ticket</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
                <!-- Refund Modal -->
                @if (ticket.CanBeRefunded)
                {
                    <div class="modal fade" id="refundModal-@ticket.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Request Refund</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Request a refund for this ticket to <strong>@ticket.EventTitle</strong>?</p>
                                    <p>Refund amount: <strong>@ticket.FormattedPrice</strong></p>
                                    <p class="text-info">Refund will be processed to your original payment method within 5-7 business days.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form asp-action="RequestRefund" asp-route-id="@ticket.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger-custom">Request Refund</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        
        <!-- Summary Section -->
        <div class="row mt-5 mb-5">
            <div class="col-12">
                <div class="card analytics-card">
                    <div class="card-header border-0 bg-transparent">
                        <h5 class="section-title mb-0">
                            <i class="bi bi-bar-chart-fill me-2"></i>Ticket Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="dashboard-stat-card bg-primary">
                                    <i class="bi bi-ticket-perforated-fill"></i>
                                    <h3>@Model.Count()</h3>
                                    <p class="mb-0 fs-6">Total Tickets</p>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="dashboard-stat-card bg-success">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <h3>@Model.Count(t => t.Status == OnlineEventTicketing.Data.Entity.TicketStatus.Active)</h3>
                                    <p class="mb-0 fs-6">Active Tickets</p>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="dashboard-stat-card bg-info text-dark">
                                    <i class="bi bi-calendar-plus-fill"></i>
                                    <h3>@Model.Count(t => t.IsUpcoming)</h3>
                                    <p class="mb-0 fs-6">Upcoming Events</p>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="dashboard-stat-card bg-warning text-dark">
                                    <i class="bi bi-currency-dollar"></i>
                                    <h3>@Model.Sum(t => t.Price).ToString("C")</h3>
                                    <p class="mb-0 fs-6">Total Spent</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>