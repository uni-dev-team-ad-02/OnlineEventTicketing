@{
    ViewData["Title"] = "Validate Ticket";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3><i class="bi bi-shield-check"></i> Ticket Validation</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Validate" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label for="qrCode" class="form-label">Enter QR Code</label>
                            <input type="text" class="form-control" id="qrCode" name="qrCode" 
                                   placeholder="Scan or enter the ticket QR code" required>
                        </div>
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-check-circle"></i> Validate Ticket
                            </button>
                        </div>
                    </form>
                    
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">
                            <h5><i class="bi bi-check-circle-fill"></i> @ViewBag.Success</h5>
                            @if (ViewBag.EventTitle != null)
                            {
                                <p><strong>Event:</strong> @ViewBag.EventTitle</p>
                            }
                            @if (ViewBag.CustomerName != null)
                            {
                                <p><strong>Customer:</strong> @ViewBag.CustomerName</p>
                            }
                        </div>
                    }
                    
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <h5><i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error</h5>
                            <p class="mb-0">Please check the QR code and try again.</p>
                        </div>
                    }
                    
                    <div class="mt-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6><i class="bi bi-info-circle"></i> Instructions</h6>
                                <ul class="mb-0 small">
                                    <li>Scan the QR code from the ticket using a QR code scanner</li>
                                    <li>Or manually enter the QR code shown on the ticket</li>
                                    <li>Valid tickets will show green confirmation</li>
                                    <li>Invalid or used tickets will show red error</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>