<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Event Ticketing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/common.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineEventTicketing.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-ticket-perforated"></i>
                    EventTicketing
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <!-- Admin Navigation -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Events" asp-action="Index">
                                        <i class="bi bi-gear"></i> Manage Events
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                        <i class="bi bi-people"></i> Manage Users
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("EventOrganizer"))
                            {
                                <!-- Organizer Navigation -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Organizer" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-bar-chart"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Create">
                                        <i class="bi bi-plus-circle"></i> Create Event
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="MyEvents">
                                        <i class="bi bi-calendar-week"></i> My Events
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Organizer" asp-controller="Promotions" asp-action="Index">
                                        <i class="bi bi-tags"></i> Promotions
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Organizer" asp-controller="Reports" asp-action="Index">
                                        <i class="bi bi-graph-up-arrow"></i> Reports
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("Customer"))
                            {
                                <!-- Customer Navigation -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-house"></i> Home
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">
                                        <i class="bi bi-calendar-event"></i> Events
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Search">
                                        <i class="bi bi-search"></i> Search
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Customer" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-person-badge"></i> My Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Index">
                                        <i class="bi bi-ticket"></i> My Tickets
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <!-- Public Navigation -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house"></i> Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">
                                    <i class="bi bi-calendar-event"></i> Events
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Search">
                                    <i class="bi bi-search"></i> Search
                                </a>
                            </li>
                        }
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Role-specific utilities -->
                            @if (User.IsInRole("Customer") || User.IsInRole("EventOrganizer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Validate">
                                        <i class="bi bi-shield-check"></i> Validate
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
    {
        @RenderBody()
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-ticket-perforated me-2"></i>
                        <span>&copy; 2025 EventTicketing. All rights reserved.</span>
                    </div>
                    <small class="text-muted">
                        <a href="#" class="text-light text-decoration-none me-3">Privacy Policy</a>
                        <a href="#" class="text-light text-decoration-none">Terms of Service</a>
                    </small>
                </div>
                <div class="col-md-6 text-end">
                    <div class="d-flex align-items-center justify-content-end">
                        <span class="me-4">
                            <i class="bi bi-shield-check text-success me-1"></i>
                            Secure Payments
                        </span>
                        <span class="me-3">
                            <i class="bi bi-headset me-1"></i>
                            24/7 Support
                        </span>
                        <span class="badge bg-light text-dark">@(VersionHelper.GetVersion())</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
