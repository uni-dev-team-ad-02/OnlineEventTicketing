@model IEnumerable<OnlineEventTicketing.Models.ViewModels.EventDisplayViewModel>
@{
    ViewData["Title"] = "Online Event Ticketing";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="hero-content text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="hero-title fade-in">
                        <i class="bi bi-ticket-perforated me-3"></i>
                        EventTicketing
                    </h1>
                    <p class="hero-subtitle slide-up">Discover amazing events, purchase tickets instantly, and create unforgettable memories with our modern ticketing platform</p>
                    <div class="slide-up">
                        <a asp-area="" asp-controller="Events" asp-action="Index" class="btn btn-light btn-lg me-3 shadow-custom">
                            <i class="bi bi-compass"></i> Explore Events
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("EventOrganizer"))
                            {
                                <a asp-area="" asp-controller="Events" asp-action="Create" class="btn btn-outline-light btn-lg shadow-custom">
                                    <i class="bi bi-plus-circle"></i> Create Event
                                </a>
                            }
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-lg shadow-custom">
                                <i class="bi bi-person-plus"></i> Join Now
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Events Section -->
@if (Model != null && Model.Any())
{
    <div class="container my-5">
        <div class="section-header">
            <h2 class="section-title gradient-text">
                <i class="bi bi-stars"></i> Featured Events
            </h2>
            <p class="section-subtitle">Don't miss out on these amazing upcoming events happening near you</p>
        </div>
        <div class="row">
            @foreach (var eventItem in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                        {
                            <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-calendar-event text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@eventItem.Title</h5>
                            <p class="card-text flex-grow-1">
                                @if (eventItem.Description.Length > 80)
                                {
                                    @Html.Raw(eventItem.Description.Substring(0, 80) + "...")
                                }
                                else
                                {
                                    @eventItem.Description
                                }
                            </p>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> @eventItem.FormattedDate
                                </small><br>
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt"></i> @eventItem.Location
                                </small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="h5 text-primary mb-0">@eventItem.FormattedPrice</span>
                                <span class="badge @(eventItem.HasAvailableTickets ? "bg-success" : "bg-danger")">
                                    @eventItem.AvailableTickets left
                                </span>
                            </div>
                            <div class="mt-auto">
                                <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-outline-primary btn-sm me-2">
                                    View Details
                                </a>
                                @if (eventItem.HasAvailableTickets)
                                {
                                    <a asp-controller="Tickets" asp-action="Purchase" asp-route-id="@eventItem.Id" class="btn btn-success btn-sm">
                                        Buy Now
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <a asp-area="" asp-controller="Events" asp-action="Index" class="btn btn-primary btn-lg shadow-custom">
                    <i class="bi bi-grid-3x3-gap"></i> View All Events
                </a>
            </div>
        </div>
    </div>
}

<!-- Features Section -->
<div class="bg-light-custom py-5">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Why Choose Our Platform?</h2>
            <p class="section-subtitle">Experience the best in event ticketing with our feature-rich platform</p>
        </div>
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div class="feature-icon mb-3">
                    <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>
                </div>
                <h4>Secure Payments</h4>
                <p class="text-muted">Safe and secure payment processing with multiple payment options</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="feature-icon mb-3">
                    <i class="bi bi-qr-code text-primary" style="font-size: 3rem;"></i>
                </div>
                <h4>Digital Tickets</h4>
                <p class="text-muted">Get instant digital tickets with QR codes for easy event entry</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="feature-icon mb-3">
                    <i class="bi bi-headset text-primary" style="font-size: 3rem;"></i>
                </div>
                <h4>24/7 Support</h4>
                <p class="text-muted">Round-the-clock customer support for all your ticketing needs</p>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-custom rounded-custom">
                <div class="card-body text-center py-5">
                    <h3 class="section-title">Ready to Get Started?</h3>
                    <p class="section-subtitle mb-4">Join thousands of event organizers and attendees on our platform</p>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg me-3 shadow-custom">
                            <i class="bi bi-person-plus-fill"></i> Sign Up Now
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg shadow-custom">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    }
                    else
                    {
                        @if (User.IsInRole("EventOrganizer"))
                        {
                            <a asp-area="" asp-controller="Events" asp-action="Create" class="btn btn-primary btn-lg me-3 shadow-custom">
                                <i class="bi bi-plus-circle-fill"></i> Create Your Event
                            </a>
                        }
                        <a asp-area="" asp-controller="Tickets" asp-action="Index" class="btn btn-outline-primary btn-lg shadow-custom">
                            <i class="bi bi-ticket-perforated"></i> My Tickets
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
