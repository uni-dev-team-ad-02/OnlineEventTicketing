@model OnlineEventTicketing.Models.ViewModels.AdminEventsReportViewModel
@{
    ViewData["Title"] = "Admin Events Report";
}

<div class="container-fluid fade-in">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="dashboard-title mb-1">
                        Events Report
                    </h1>
                    <p class="dashboard-subtitle mb-0">@Model.FormattedReportPeriod</p>
                </div>
                <div class="d-flex gap-2">
                    <form asp-action="ExportEventsReport" method="post" class="d-inline">
                        <input type="hidden" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                        <button type="submit" class="btn btn-success-custom">
                            <i class="bi bi-download me-2"></i>Export CSV
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-primary-custom">
                        <i class="bi bi-arrow-left me-2"></i>Back to Reports
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-5">
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon stat-icon-primary me-3">
                            <i class="bi bi-calendar-event text-primary"></i>
                        </div>
                        <div>
                            <h3 class="stat-number text-primary-custom mb-0">@Model.TotalEvents.ToString("N0")</h3>
                            <p class="stat-label mb-0">Total Events</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon stat-icon-success me-3">
                            <i class="bi bi-calendar-check text-success"></i>
                        </div>
                        <div>
                            <h3 class="stat-number text-success-custom mb-0">@Model.ActiveEvents.ToString("N0")</h3>
                            <p class="stat-label mb-0">Active Events</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon stat-icon-info me-3">
                            <i class="bi bi-clock-history text-info"></i>
                        </div>
                        <div>
                            <h3 class="stat-number text-info-custom mb-0">@Model.UpcomingEvents.ToString("N0")</h3>
                            <p class="stat-label mb-0">Upcoming Events</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon stat-icon-warning me-3">
                            <i class="bi bi-percent text-warning"></i>
                        </div>
                        <div>
                            <h3 class="stat-number text-warning-custom mb-0">@Model.FormattedOverallSellThroughRate</h3>
                            <p class="stat-label mb-0">Sell-through Rate</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Stats -->
    <div class="row g-4 mb-5">
        <div class="col-lg-4 col-md-6">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <h4 class="stat-number text-info-custom">@Model.TotalCapacity.ToString("N0")</h4>
                    <p class="stat-label mb-0">Total Capacity</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <h4 class="stat-number text-success-custom">@Model.TotalTicketsSold.ToString("N0")</h4>
                    <p class="stat-label mb-0">Tickets Sold</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <h4 class="stat-number text-primary-custom">@Model.FormattedAverageEventCapacity</h4>
                    <p class="stat-label mb-0">Avg Event Capacity</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Event Creation Chart -->
    @if (Model.MonthlyEventCreation.Any())
    {
        <div class="row mb-5">
            <div class="col-12">
                <div class="card analytics-card">
                    <div class="card-header border-0 bg-transparent">
                        <h5 class="section-title mb-0">
                            Monthly Event Creation Trends
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="monthlyCreationChart" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Top Performing Events -->
    @if (Model.TopPerformingEvents.Any())
    {
        <div class="row mb-5">
            <div class="col-12">
                <div class="card analytics-card">
                    <div class="card-header border-0 bg-transparent">
                        <h5 class="section-title mb-0">
                            Top Performing Events
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-professional table-hover">
                                <thead>
                                    <tr>
                                        <th>Event</th>
                                        <th>Organizer</th>
                                        <th>Date</th>
                                        <th>Category</th>
                                        <th>Capacity</th>
                                        <th>Sold</th>
                                        <th>Revenue</th>
                                        <th>Performance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var evt in Model.TopPerformingEvents)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@evt.EventTitle</strong>
                                                <br>
                                                <small class="text-muted">@evt.Location</small>
                                            </td>
                                            <td>@evt.OrganizerName</td>
                                            <td>@evt.FormattedEventDate</td>
                                            <td>
                                                <span class="badge bg-secondary">@evt.Category</span>
                                            </td>
                                            <td>@evt.Capacity.ToString("N0")</td>
                                            <td>@evt.TicketsSold.ToString("N0")</td>
                                            <td>
                                                <strong class="text-success">@evt.FormattedRevenue</strong>
                                            </td>
                                            <td>
                                                <span class="badge @evt.PerformanceBadgeClass">
                                                    @evt.PerformanceRating
                                                </span>
                                                <br>
                                                <small class="text-muted">@evt.FormattedSellThroughRate</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Category Analysis -->
    @if (Model.CategoryAnalysis.Any())
    {
        <div class="row mb-5">
            <div class="col-lg-6">
                <div class="card analytics-card">
                    <div class="card-header border-0 bg-transparent">
                        <h5 class="section-title mb-0">
                            Category Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="categoryDistributionChart" height="200"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card analytics-card">
                    <div class="card-header border-0 bg-transparent">
                        <h5 class="section-title mb-0">
                            Category Performance
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th>Events</th>
                                        <th>Sell-through</th>
                                        <th>Market Share</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.CategoryAnalysis)
                                    {
                                        <tr>
                                            <td><strong>@category.Category</strong></td>
                                            <td>@category.EventCount</td>
                                            <td>@category.FormattedSellThroughRate</td>
                                            <td>
                                                <span class="badge bg-primary">@category.FormattedMarketShare</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Organizer Performance -->
    @if (Model.OrganizerPerformance.Any())
    {
        <div class="row mb-5">
            <div class="col-12">
                <div class="card analytics-card">
                    <div class="card-header border-0 bg-transparent">
                        <h5 class="section-title mb-0">
                            Organizer Performance
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-professional table-hover">
                                <thead>
                                    <tr>
                                        <th>Organizer</th>
                                        <th>Email</th>
                                        <th>Events Created</th>
                                        <th>Active Events</th>
                                        <th>Tickets Sold</th>
                                        <th>Revenue</th>
                                        <th>Performance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var organizer in Model.OrganizerPerformance)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@organizer.OrganizerName</strong>
                                            </td>
                                            <td>@organizer.Email</td>
                                            <td>
                                                <span class="badge bg-info">@organizer.EventsCreated</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@organizer.ActiveEvents</span>
                                            </td>
                                            <td>@organizer.TicketsSold.ToString("N0")</td>
                                            <td>
                                                <strong class="text-success">@organizer.FormattedRevenue</strong>
                                            </td>
                                            <td>
                                                <span class="badge @organizer.PerformanceBadgeClass">
                                                    @organizer.PerformanceRating
                                                </span>
                                                <br>
                                                <small class="text-muted">@organizer.FormattedSellThroughRate</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Recent Events -->
    @if (Model.RecentEvents.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card analytics-card">
                    <div class="card-header border-0 bg-transparent">
                        <h5 class="section-title mb-0">
                            Recent Events
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-professional table-hover">
                                <thead>
                                    <tr>
                                        <th>Event</th>
                                        <th>Organizer</th>
                                        <th>Event Date</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th>Tickets Sold</th>
                                        <th>Created</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var evt in Model.RecentEvents)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@evt.EventTitle</strong>
                                            </td>
                                            <td>@evt.OrganizerName</td>
                                            <td>@evt.FormattedEventDate</td>
                                            <td>
                                                <span class="badge bg-secondary">@evt.Category</span>
                                            </td>
                                            <td>
                                                <span class="badge @evt.StatusBadgeClass">@evt.StatusDisplayName</span>
                                            </td>
                                            <td>
                                                @evt.TicketsSold / @evt.Capacity
                                            </td>
                                            <td>@evt.FormattedCreatedAt</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Monthly Event Creation Chart
        @if (Model.MonthlyEventCreation.Any())
        {
            <text>
            const monthlyCreationCtx = document.getElementById('monthlyCreationChart').getContext('2d');
            new Chart(monthlyCreationCtx, {
                type: 'bar',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.MonthlyEventCreation.Select(m => $"'{m.Month}'")))],
                    datasets: [{
                        label: 'Events Created',
                        data: [@string.Join(",", Model.MonthlyEventCreation.Select(m => m.EventsCreated))],
                        backgroundColor: 'rgba(13, 110, 253, 0.8)',
                        borderColor: 'rgba(13, 110, 253, 1)',
                        borderWidth: 1
                    }, {
                        label: 'Active Organizers',
                        data: [@string.Join(",", Model.MonthlyEventCreation.Select(m => m.ActiveOrganizers))],
                        backgroundColor: 'rgba(25, 135, 84, 0.8)',
                        borderColor: 'rgba(25, 135, 84, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            </text>
        }

        // Category Distribution Chart
        @if (Model.CategoryAnalysis.Any())
        {
            <text>
            const categoryDistributionCtx = document.getElementById('categoryDistributionChart').getContext('2d');
            new Chart(categoryDistributionCtx, {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.CategoryAnalysis.Select(c => $"'{c.Category}'")))],
                    datasets: [{
                        data: [@string.Join(",", Model.CategoryAnalysis.Select(c => c.EventCount))],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 205, 86, 0.8)',
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(153, 102, 255, 0.8)',
                            'rgba(255, 159, 64, 0.8)',
                            'rgba(199, 199, 199, 0.8)',
                            'rgba(83, 102, 255, 0.8)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 205, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)',
                            'rgba(199, 199, 199, 1)',
                            'rgba(83, 102, 255, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            </text>
        }
    </script>
}

