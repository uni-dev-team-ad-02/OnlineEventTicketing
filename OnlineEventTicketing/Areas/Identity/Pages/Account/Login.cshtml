@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="container-fluid fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <!-- Header -->
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h1 class="dashboard-title mb-2">
                        <i class="bi bi-person-circle me-3"></i>Welcome Back
                    </h1>
                    <p class="dashboard-subtitle">Sign in to your account to continue managing your events</p>
                </div>
            </div>

            <div class="row">
                <!-- Login Form -->
                <div class="col-lg-6 mb-4">
                    <div class="card form-card">
                        <div class="card-header border-0 bg-transparent">
                            <h5 class="section-title mb-0">
                                <i class="bi bi-key-fill me-2"></i>Sign In to Your Account
                            </h5>
                        </div>
                        <div class="card-body">
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="mb-4">
                                    <label asp-for="Input.Email" class="form-label fw-bold">
                                        <i class="bi bi-envelope me-2 text-primary"></i>Email Address
                                    </label>
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="Enter your email address" />
                                    <span asp-validation-for="Input.Email" class="text-danger mt-1 d-block"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Input.Password" class="form-label fw-bold">
                                        <i class="bi bi-lock me-2 text-primary"></i>Password
                                    </label>
                                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                                    <span asp-validation-for="Input.Password" class="text-danger mt-1 d-block"></span>
                                </div>

                                <div class="mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">
                                            Remember me on this device
                                        </label>
                                    </div>
                                </div>

                                <button id="login-submit" type="submit" class="btn btn-success-custom btn-lg w-100 mb-3">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                                </button>

                                <div class="text-center">
                                    <div class="row">
                                        <div class="col-12 mb-2">
                                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted text-decoration-none">
                                                <i class="bi bi-question-circle me-1"></i>Forgot your password?
                                            </a>
                                        </div>
                                        <div class="col-12 mb-2">
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary-custom fw-bold text-decoration-none">
                                                <i class="bi bi-person-plus me-1"></i>Create new account
                                            </a>
                                        </div>
                                        <div class="col-12">
                                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted text-decoration-none small">
                                                <i class="bi bi-envelope-check me-1"></i>Resend email confirmation
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Welcome Info -->
                <div class="col-lg-6 mb-4">
                    <div class="card analytics-card h-100">
                        <div class="card-header border-0 bg-transparent">
                            <h5 class="section-title mb-0">
                                <i class="bi bi-speedometer2 me-2"></i>Your Dashboard Awaits
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-4">
                                <div class="text-center">
                                    <div class="stat-icon stat-icon-primary mb-3 mx-auto" style="width: 60px; height: 60px;">
                                        <i class="bi bi-calendar-week-fill" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <h5>Manage Your Events</h5>
                                    <p class="text-muted">Access your event dashboard to create, edit, and monitor your events.</p>
                                </div>

                                <hr class="my-3">

                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="stat-icon stat-icon-success mb-2 mx-auto" style="width: 40px; height: 40px;">
                                            <i class="bi bi-graph-up"></i>
                                        </div>
                                        <h6 class="mb-1">Analytics</h6>
                                        <small class="text-muted">Track performance</small>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-icon stat-icon-info mb-2 mx-auto" style="width: 40px; height: 40px;">
                                            <i class="bi bi-ticket-perforated"></i>
                                        </div>
                                        <h6 class="mb-1">Tickets</h6>
                                        <small class="text-muted">Sales management</small>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-icon stat-icon-warning mb-2 mx-auto" style="width: 40px; height: 40px;">
                                            <i class="bi bi-tags"></i>
                                        </div>
                                        <h6 class="mb-1">Promotions</h6>
                                        <small class="text-muted">Discount codes</small>
                                    </div>
                                </div>
                            </div>

                            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <hr class="my-4">
                                <div class="text-center">
                                    <h6 class="text-muted mb-3">Or sign in with</h6>
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                        <div class="d-grid gap-2">
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Sign in using your @provider.DisplayName account">
                                                    <i class="bi bi-@provider.Name.ToLower()"></i> @provider.DisplayName
                                                </button>
                                            }
                                        </div>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
