@using OnlineEventTicketing.Data.Entity
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container-fluid fade-in">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="dashboard-title mb-1">My Dashboard</h1>
                    <p class="dashboard-subtitle mb-0">Welcome back! Here's your ticket overview and personalized recommendations</p>
                </div>
                <a asp-area="" asp-controller="Events" asp-action="Index" class="btn btn-success-custom btn-lg">
                    <i class="bi bi-compass-fill me-2"></i>Explore Events
                </a>
            </div>
        </div>
    </div>

    <!-- Customer Statistics -->
    <div class="row mb-5 slide-up">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon stat-icon-success mb-3">
                        <i class="bi bi-ticket-perforated-fill"></i>
                    </div>
                    <h3 class="stat-number text-success-custom">@ViewBag.TotalTickets</h3>
                    <p class="stat-label mb-0">Total Tickets</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon stat-icon-primary mb-3">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <h3 class="stat-number text-primary-custom">@ViewBag.ActiveTickets</h3>
                    <p class="stat-label mb-0">Active Tickets</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon stat-icon-info mb-3">
                        <i class="bi bi-calendar-plus-fill"></i>
                    </div>
                    <h3 class="stat-number text-info-custom">@ViewBag.UpcomingEvents</h3>
                    <p class="stat-label mb-0">Upcoming Events</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon stat-icon-warning mb-3">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <h3 class="stat-number text-warning-custom">@(ViewBag.TotalSpent?.ToString("C") ?? "$0")</h3>
                    <p class="stat-label mb-0">Total Spent</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card admin-actions-card">
                <div class="card-header border-0 bg-transparent">
                    <h5 class="section-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a asp-area="" asp-controller="Events" asp-action="Index" class="btn btn-success-custom btn-lg w-100">
                                <i class="bi bi-compass-fill d-block mb-2" style="font-size: 2.5rem;"></i>
                                Browse Events
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a asp-area="" asp-controller="Tickets" asp-action="Index" class="btn btn-primary-custom btn-lg w-100">
                                <i class="bi bi-ticket-perforated-fill d-block mb-2" style="font-size: 2.5rem;"></i>
                                My Tickets
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a asp-area="" asp-controller="Events" asp-action="Search" class="btn btn-info-custom btn-lg w-100">
                                <i class="bi bi-funnel-fill d-block mb-2" style="font-size: 2.5rem;"></i>
                                Search Events
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a asp-area="" asp-controller="Tickets" asp-action="Validate" class="btn btn-warning-custom btn-lg w-100">
                                <i class="bi bi-shield-check d-block mb-2" style="font-size: 2.5rem;"></i>
                                Validate Ticket
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Loyalty Points -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card analytics-card">
                <div class="card-header border-0 bg-transparent">
                    <h5 class="section-title mb-0">Loyalty Points</h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3 class="text-warning-custom">@ViewBag.LoyaltyPoints Points</h3>
                            <p class="mb-0">Keep purchasing tickets to earn more loyalty points and unlock exclusive discounts!</p>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="btn btn-outline-warning btn-lg disabled">
                                <i class="bi bi-trophy" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Tickets and Recommendations -->
    <div class="row">
        <div class="col-md-6">
            <div class="card analytics-card">
                <div class="card-header border-0 bg-transparent">
                    <h5 class="section-title mb-0">Recent Tickets</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentTickets != null)
                    {
                        <div class="list-group">
                            @foreach (var ticket in ViewBag.RecentTickets)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@ticket.EventTitle</h6>
                                        <small class="text-muted">@ticket.PurchaseDate.ToString("MMM dd")</small>
                                    </div>
                                    <p class="mb-1">@ticket.EventLocation</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge @(ticket.Status == TicketStatus.Active ? "bg-success" : "bg-secondary")">
                                            @ticket.Status
                                        </span>
                                        <div>
                                            <span class="text-success fw-bold">@ticket.Price.ToString("C")</span>
                                            <a asp-area="" asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-outline-primary ms-2">View</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-3">
                            <a asp-area="" asp-controller="Tickets" asp-action="Index" class="btn btn-primary-custom">
                                <i class="bi bi-eye me-2"></i>View All Tickets
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-ticket text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">No tickets purchased yet.</p>
                            <a asp-area="" asp-controller="Events" asp-action="Index" class="btn btn-primary-custom">
                                <i class="bi bi-search me-2"></i>Browse Events
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card analytics-card">
                <div class="card-header border-0 bg-transparent">
                    <h5 class="section-title mb-0">Recommended Events</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecommendedEvents != null)
                    {
                        <div class="list-group">
                            @foreach (var eventItem in ViewBag.RecommendedEvents)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@eventItem.Title</h6>
                                        <span class="badge bg-info">@eventItem.Category</span>
                                    </div>
                                    <p class="mb-1">@eventItem.Location â€¢ @eventItem.Date.ToString("MMM dd, yyyy")</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-success fw-bold">@eventItem.BasePrice.ToString("C")</span>
                                        <div>
                                            <small class="text-muted me-2">@eventItem.AvailableTickets tickets left</small>
                                            <a asp-area="" asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-sm btn-outline-success">View</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-lightbulb text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">Purchase some tickets to get personalized recommendations!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Favorite Categories -->
    @if (ViewBag.FavoriteCategories != null)
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card analytics-card">
                    <div class="card-header border-0 bg-transparent">
                        <h5 class="section-title mb-0">Your Favorite Categories</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            @foreach (var category in ViewBag.FavoriteCategories)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="p-3 border rounded">
                                        <h4 class="text-primary">@category.Count</h4>
                                        <p class="mb-0">@category.Category</p>
                                        <small class="text-muted">tickets purchased</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>