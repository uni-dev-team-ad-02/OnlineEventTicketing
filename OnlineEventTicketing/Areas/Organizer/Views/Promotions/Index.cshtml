@model IEnumerable<OnlineEventTicketing.Models.ViewModels.PromotionDisplayViewModel>
@{
    ViewData["Title"] = "My Promotions";
}

<div class="container-fluid fade-in">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="dashboard-title mb-1">My Promotions</h1>
                    <p class="dashboard-subtitle mb-0">Create and manage promotional codes for your events</p>
                </div>
                <a asp-action="Create" class="btn btn-success-custom btn-lg">
                    <i class="bi bi-plus-circle-fill me-2"></i>Create Promotion
                </a>
            </div>
        </div>
    </div>

    <!-- Promotions Summary -->
    @if (Model.Any())
    {
        <div class="row mb-4 slide-up">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card">
                    <div class="card-body text-center">
                        <div class="stat-icon stat-icon-primary mb-3">
                            <i class="bi bi-tags-fill"></i>
                        </div>
                        <h3 class="stat-number text-primary-custom">@Model.Count()</h3>
                        <p class="stat-label mb-0">Total Promotions</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card">
                    <div class="card-body text-center">
                        <div class="stat-icon stat-icon-success mb-3">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <h3 class="stat-number text-success-custom">@Model.Count(p => p.IsCurrentlyActive)</h3>
                        <p class="stat-label mb-0">Active Now</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card">
                    <div class="card-body text-center">
                        <div class="stat-icon stat-icon-warning mb-3">
                            <i class="bi bi-clock-fill"></i>
                        </div>
                        <h3 class="stat-number text-warning-custom">@Model.Count(p => p.StatusDisplayName == "Scheduled")</h3>
                        <p class="stat-label mb-0">Scheduled</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stat-card">
                    <div class="card-body text-center">
                        <div class="stat-icon stat-icon-info mb-3">
                            <i class="bi bi-percent"></i>
                        </div>
                        <h3 class="stat-number text-info-custom">@Math.Round(Model.Average(p => p.DiscountPercentage), 1)%</h3>
                        <p class="stat-label mb-0">Avg. Discount</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Promotions List -->
    <div class="row">
        <div class="col-12">
            <div class="card events-table-card">
                <div class="card-header border-0 bg-transparent">
                    <h5 class="section-title mb-0">All Promotions</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-professional">
                                    <tr>
                                        <th>Code</th>
                                        <th>Event</th>
                                        <th>Discount</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var promotion in Model.OrderByDescending(p => p.CreatedAt))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="me-2">
                                                        <i class="bi bi-tag-fill text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold font-monospace">@promotion.Code</div>
                                                        @if (!string.IsNullOrEmpty(promotion.Description))
                                                        {
                                                            <small class="text-muted">@promotion.Description</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-bold">@promotion.EventTitle</div>
                                                    <small class="text-muted">
                                                        <i class="bi bi-calendar-fill"></i> @promotion.FormattedEventDate
                                                    </small><br />
                                                    <small class="text-muted">
                                                        <i class="bi bi-geo-alt-fill"></i> @promotion.EventLocation
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-success fs-6">@promotion.FormattedDiscountPercentage</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <small class="text-muted d-block">@promotion.FormattedStartDate</small>
                                                    <small class="text-muted">to @promotion.FormattedEndDate</small>
                                                </div>
                                                <small class="text-info">@promotion.FormattedDaysRemaining</small>
                                            </td>
                                            <td>
                                                <span class="badge @promotion.StatusBadgeClass">@promotion.StatusDisplayName</span>
                                            </td>
                                            <td>
                                                <div>@promotion.FormattedCreatedAt</div>
                                                <small class="text-muted">@((DateTime.Now - promotion.CreatedAt).Days) days ago</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@promotion.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="bi bi-eye-fill"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@promotion.Id" class="btn btn-sm btn-outline-secondary" title="Edit Promotion">
                                                        <i class="bi bi-pencil-fill"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm @(promotion.IsActive ? "btn-outline-warning" : "btn-outline-success")" 
                                                            data-bs-toggle="modal" data-bs-target="#statusModal-@promotion.Id" 
                                                            title="@(promotion.IsActive ? "Deactivate" : "Activate") Promotion">
                                                        <i class="bi bi-@(promotion.IsActive ? "pause-circle-fill" : "play-circle-fill")"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            data-bs-toggle="modal" data-bs-target="#deleteModal-@promotion.Id" title="Delete Promotion">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Status Toggle Modal -->
                                        <div class="modal fade" id="statusModal-@promotion.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">@(promotion.IsActive ? "Deactivate" : "Activate") Promotion</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to @(promotion.IsActive ? "deactivate" : "activate") the promotion <strong>@promotion.Code</strong>?</p>
                                                        @if (promotion.IsActive)
                                                        {
                                                            <p class="text-warning">This will make the promotion unusable by customers.</p>
                                                        }
                                                        else
                                                        {
                                                            <p class="text-success">This will make the promotion available for customers to use.</p>
                                                        }
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="ToggleStatus" asp-route-id="@promotion.Id" method="post" style="display: inline;">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn @(promotion.IsActive ? "btn-warning-custom" : "btn-success-custom")">
                                                                @(promotion.IsActive ? "Deactivate" : "Activate")
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal-@promotion.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Delete Promotion</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete the promotion <strong>@promotion.Code</strong>?</p>
                                                        <p class="text-danger">This action cannot be undone.</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="Delete" asp-route-id="@promotion.Id" method="post" style="display: inline;">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger-custom">Delete Promotion</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-tags text-muted" style="font-size: 4rem;"></i>
                            <h4 class="text-muted mt-3">No promotions created yet</h4>
                            <p class="text-muted">Create promotional codes to offer discounts to your event attendees.</p>
                            <a asp-action="Create" class="btn btn-success-custom btn-lg">
                                <i class="bi bi-plus-circle-fill me-2"></i>Create Your First Promotion
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.font-monospace {
    font-family: 'Courier New', Courier, monospace;
}
</style>