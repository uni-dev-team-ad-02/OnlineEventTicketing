@model OnlineEventTicketing.Models.ViewModels.EditPromotionViewModel
@{
    ViewData["Title"] = "Edit Promotion";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="dashboard-title mb-1">Edit Promotion</h1>
                            <p class="dashboard-subtitle mb-0">Update your promotional code settings</p>
                        </div>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Promotions
                        </a>
                    </div>
                </div>
            </div>

            <!-- Edit Form -->
            <div class="card form-card">
                <div class="card-header border-0 bg-transparent">
                    <h5 class="section-title mb-0">Promotion Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="EventId" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Current Event Information (Read-only) -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary-custom mb-3">
                                    <i class="bi bi-calendar-event-fill me-2"></i>Associated Event
                                </h6>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-8">
                                                <h5 class="card-title text-primary-custom mb-2">@Model.EventTitle</h5>
                                                <div class="d-flex flex-wrap gap-3">
                                                    <span class="text-muted">
                                                        <i class="bi bi-calendar-fill"></i> @Model.EventDate.ToString("MMM dd, yyyy")
                                                    </span>
                                                    <span class="text-muted">
                                                        <i class="bi bi-geo-alt-fill"></i> @Model.EventLocation
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-md-4 text-end">
                                                <span class="text-muted">Event cannot be changed</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Basic Information -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary-custom mb-3">
                                    <i class="bi bi-info-circle-fill me-2"></i>Basic Information
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Code" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-tag-fill"></i></span>
                                    <input asp-for="Code" class="form-control text-uppercase font-monospace" 
                                           style="text-transform: uppercase;" />
                                </div>
                                <span asp-validation-for="Code" class="text-danger"></span>
                                <div class="form-text">Use uppercase letters and numbers only.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DiscountPercentage" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-percent"></i></span>
                                    <input asp-for="DiscountPercentage" class="form-control" type="number" 
                                           min="0.01" max="100" step="0.01" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                                <div class="form-text">Percentage discount to apply to ticket prices.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="Description" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-text-paragraph"></i></span>
                                    <textarea asp-for="Description" class="form-control" rows="3" 
                                              placeholder="Optional description of this promotion..."></textarea>
                                </div>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <div class="form-text">Optional description to help you remember what this promotion is for.</div>
                            </div>
                        </div>

                        <!-- Date Range -->
                        <div class="row mb-4 mt-4">
                            <div class="col-12">
                                <h6 class="text-primary-custom mb-3">
                                    <i class="bi bi-calendar-range-fill me-2"></i>Validity Period
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar-plus-fill"></i></span>
                                    <input asp-for="StartDate" class="form-control" type="datetime-local" />
                                </div>
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                                <div class="form-text">When the promotion becomes active.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar-x-fill"></i></span>
                                    <input asp-for="EndDate" class="form-control" type="datetime-local" />
                                </div>
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                                <div class="form-text">When the promotion expires.</div>
                            </div>
                        </div>

                        <!-- Settings -->
                        <div class="row mb-4 mt-4">
                            <div class="col-12">
                                <h6 class="text-primary-custom mb-3">
                                    <i class="bi bi-gear-fill me-2"></i>Settings
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Active
                                    </label>
                                </div>
                                <div class="form-text">Uncheck to disable this promotion.</div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                                            <i class="bi bi-x-circle me-2"></i>Cancel
                                        </a>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info-custom btn-lg">
                                            <i class="bi bi-eye-fill me-2"></i>View Details
                                        </a>
                                    </div>
                                    <button type="submit" class="btn btn-primary-custom btn-lg">
                                        <i class="bi bi-check-circle-fill me-2"></i>Update Promotion
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Auto-uppercase the promotion code
        document.getElementById('Code').addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });
    </script>
}

<style>
.font-monospace {
    font-family: 'Courier New', Courier, monospace !important;
}
</style>